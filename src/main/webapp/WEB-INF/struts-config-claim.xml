      type="com.biperf.core.ui.claimform.ClaimFormStepAction"
      scope="request"
      validate="false"
      input="claimformstep.create">
      <forward name="create" path="claimformstep.create" redirect="false"/>
    </action>

    <action path="/claimFormStepCreate"
      name="claimFormStepForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepAction"
      scope="request"
      validate="true"
      input="claimformstep.create">

      <forward name="create" path="claimformstep.create" redirect="false"/>
      <forward name="success_create" path="/claimFormStepView.do" redirect="true"/>
      <forward name="failure_create" path="claimformstep.create" redirect="false"/>

    </action>

   <action path="/claimFormStepUpdatePre"
      name="claimFormStepForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepAction"
      scope="request"
      validate="false"
      input="claimformstep.update">
      <forward name="update" path="claimformstep.update" redirect="false"/>
      <forward name="success_update" path="claimformstep.update.success" redirect="false"/>
      <forward name="failure_update" path="claimformstep.update" redirect="false"/>
    </action>

    <action path="/claimFormStepUpdate"
      name="claimFormStepForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepAction"
      scope="request"
      validate="true"
      input="claimformstep.update">

      <forward name="update" path="claimformstep.update" redirect="false"/>
      <forward name="success_update" path="claimformstep.update.success" redirect="false"/>
      <forward name="failure_update" path="claimformstep.update" redirect="false"/>

    </action>
    <action path="/claimFormStepMaintainView"
      name="claimFormStepViewForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepAction"
      scope="request"
      validate="true"
      input="claimformstep.view">
      <forward name="success_update" path="claimformstep.view" redirect="false"/>
      <forward name="failure_update" path="claimformstep.view" redirect="false"/>
