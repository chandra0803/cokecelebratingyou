      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="true"
      input="claimform.copy"
      cancellable="true">
      <forward name="success_copy" path="/claimFormList.do" redirect="true"/>
      <forward name="failure" path="claimform.copy" redirect="false"/>
      <forward name="failure_copy" path="claimform.copy" redirect="false"/>
      <forward name="cancel" path="/claimFormDisplay.do" redirect="true"/>
    </action>

