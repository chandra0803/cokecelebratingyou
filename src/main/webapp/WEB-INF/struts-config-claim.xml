      <forward name="failure_delete" path="claimformstep.view" redirect="false"/>
    </action>

    <action path="/claimFormStepView"
      type="org.apache.struts.actions.ForwardAction"
      name="claimFormStepViewForm"
      scope="request"
      parameter="claimformstep.view"
      input="claimformstep.view" cancellable="true"/>

    <action path="/customerInformationBlockDisplay"
      type="org.apache.struts.actions.ForwardAction"
      name="customerInformationBlockForm"
      parameter="claimformstep.cib.maintain"/>

