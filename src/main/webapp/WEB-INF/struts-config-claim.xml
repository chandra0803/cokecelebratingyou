      type="com.biperf.core.ui.productclaim.ProductClaimSubmitStartAction"
      scope="request"
      parameter="method"
      name="productClaimSubmissionForm"
      validate="false"
      cancellable="true">
      <forward name="success" path="claimformstepelement.preview" redirect="false"/>
    </action>

    <action path="/claimFormListMaintain"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="true"
      input="claimform.list">
      <forward name="success_delete" path="/claimFormList.do" redirect="true"/>
      <forward name="failure_delete" path="claimform.list" redirect="false"/>
      <forward name="cancel" path="/claimFormList.do" redirect="true"/>
    </action>

    <action path="/claimFormMaintainCreate"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="true"
      input="claimform.create"
      cancellable="true">
      <forward name="success_create" path="/claimFormDisplay.do" redirect="true"/>
      <forward name="failure_create" path="claimform.create" redirect="false"/>
      <forward name="cancel" path="/claimFormList.do" redirect="true"/>
    </action>

    <action path="/claimFormMaintainUpdate"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="true"
      input="claimform.update"
      cancellable="true">
      <forward name="success_update" path="/claimFormDisplay.do" redirect="true"/>
      <forward name="failure" path="claimform.update" redirect="false"/>
      <forward name="failure_update" path="claimform.update" redirect="false"/>
      <forward name="cancel" path="/claimFormList.do" redirect="true"/>
    </action>

    <action path="/claimFormMaintainSteps"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="false"
      input="claimform.display">
      <forward name="success_update" path="/claimFormDisplay.do" redirect="true"/>
      <forward name="failure" path="claimform.display" redirect="false"/>
      <forward name="failure_update" path="claimform.display" redirect="false"/>
    </action>

    <action path="/claimFormMarkComplete"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="false"
      input="claimform.display">
      <forward name="success_update" path="/claimFormList.do" redirect="true"/>
      <forward name="failure" path="claimform.display" redirect="false"/>
      <forward name="failure_update" path="claimform.display" redirect="false"/>
    </action>

