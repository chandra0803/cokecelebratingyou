      type="com.biperf.core.ui.claimform.CustomerInformationBlockAction"
      scope="request"
      validate="true"
      input="claimformstep.cib.maintain">
      <forward name="success_update" path="/claimFormStepView.do" redirect="true"/>
      <forward name="cancel" path="/claimFormStepView.do" redirect="true"/>
      <forward name="failure_update" path="claimformstep.cib.maintain" redirect="false"/>
    </action>

    <action path="/claimFormStepElementDisplay"
      name="claimFormStepElementForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepElementAction"
      scope="request"
