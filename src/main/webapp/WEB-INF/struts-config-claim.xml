      <forward name="create" path="claimformstepelement.create" redirect="false"/>
    </action>

    <action path="/claimFormStepElementCreate"
      name="claimFormStepElementForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepElementAction"
      scope="request"
      validate="true"
      input="claimformstepelement.create">
      <forward name="success_create" path="/claimFormStepView.do" redirect="true"/>
      <forward name="failure_create" path="claimformstepelement.create" redirect="false"/>

    </action>

    <action path="/claimFormStepElementUpdate"
      name="claimFormStepElementForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormStepElementAction"
      scope="request"
      validate="true"
      input="claimformstepelement.update">
      <forward name="success_update" path="/claimFormStepView.do" redirect="true"/>
      <forward name="failure_update" path="claimformstepelement.update" redirect="false"/>
    </action>

    <action path="/claimFormStepElementView"
      type="org.apache.struts.actions.ForwardAction"
      name="claimFormStepViewForm"
      scope="request"
      parameter="claimformstepelement.view"
      input="claimformstepelement.view"/>

  <action path="/managerAddPoints"
		    type="com.biperf.core.ui.claim.ManagerAddPointsAction"
        name="managerAddPointsForm"
		    scope="request"
		    validate="false"
		    cancellable="true"
