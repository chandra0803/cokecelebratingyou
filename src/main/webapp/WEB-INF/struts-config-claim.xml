    <!-- Start Claim Form Mappings  -->
    <action path="/claimFormList"
      type="org.apache.struts.actions.ForwardAction"
      name="claimFormForm"
      parameter="claimform.list"
      input="claimform.list"/>

	<action path="/claimFormPromotionList"
	  type="org.apache.struts.actions.ForwardAction"
	  name="claimFormForm"
	  parameter="claimform.promotionList"/>
	  
    <action path="/claimFormDisplay"
      name="claimFormForm"
      parameter="method"
      type="com.biperf.core.ui.claimform.ClaimFormAction"
      scope="request"
      validate="false"
      input="claimform.create">
      <forward name="create" path="claimform.create" redirect="false"/>
      <forward name="copy" path="claimform.copy" redirect="false"/>
      <forward name="display" path="claimform.display" redirect="false"/>
      <forward name="update" path="claimform.update" redirect="false"/>
      <forward name="failure" path="claimform.create" redirect="false"/>
      <forward name="failure_update" path="claimform.update" redirect="false"/>
      <forward name="failure_create" path="claimform.create" redirect="false"/>
      <forward name="preview" path="/claimFormStepElementPreview.do" redirect="true"/>
    </action>
    
