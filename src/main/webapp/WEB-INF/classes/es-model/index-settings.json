{  
   "settings":{  
      "analysis":{  
         "analyzer":{  
            "pax_name_index_analyzer":{  
               "tokenizer":"whitespace",
               "filter":[  
                  "standard",
                  "keyword_repeat",
                  "pax_name_delimiter",
                  "lowercase",
                  "pax_name_asciifolding",
                  "unique"
               ]
            },
            "pax_name_search_analyzer":{  
               "tokenizer":"whitespace",
               "filter":[  
                  "standard",
                  "keyword_repeat",
                  "pax_name_delimiter",
                  "lowercase",
                  "pax_name_asciifolding",
                  "unique"
               ]
            },
            "case_insensitive_sort_analyzer":{  
               "tokenizer":"keyword",
               "filter":[  
                  "lowercase"
               ]
            }
         },
         "filter":{  
            "pax_name_delimiter":{  
               "type":"word_delimiter",
               "generate_word_parts":true,
               "catenate_words":true,
               "catenate_numbers":true,
               "catenate_all":true,
               "split_on_case_change":true,
               "preserve_original":true,
               "split_on_numerics":true,
               "stem_english_possessive":false
            },
            "pax_name_asciifolding":{  
               "type":"asciifolding",
               "preserve_original":true
            }
         }
      }
   }
}