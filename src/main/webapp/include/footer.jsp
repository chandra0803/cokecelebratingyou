	</table>
</DIV>

<script type="text/javascript">
	var requestBaseURI = '<%=RequestUtils.getBaseURI(request)%>';

    <%-- TODO: make this only run when environment mode is dev--%>
    for (i = 0; i < document.forms.length; i++) {
      formId = document.forms[i].id;
      if (formId == null || formId == "")
      {
        /* Ignore forms generated by Opinio surveys, which are shown in Instant Poll widgets. */
        formName = document.forms[i].getAttribute("name");
        if (formName.substring(0, 8) != "pollForm" )
        {
          alert("BEACON DEVELOPER WARNING: an html:form tag (or regular html form tag) should have its id set " +
          "to the word contentForm to distinguish it from the quicksearch form, and so that commonFunctions.js works correctly.");
        }
      }
    }
</script>
