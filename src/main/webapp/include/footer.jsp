		<tr>
			<td class="footerlinks" align="center">
			<br>
			<a href="<%=RequestUtils.getBaseURI(request)%>/privacy.do" class="footerlinks">
					<cms:contentText key="PRIVACY_POLICY" code="system.general"/>
