<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.biperf.core.domain.multimedia.EcardLocale" table="ECARD_LOCALE" >
		<composite-id> 
            <key-property name="cardId" column="CARD_ID" type="java.lang.Long" />
            <key-property column="LOCALE"  name="locale"  type="java.lang.String"/>
	   	</composite-id> 
	   	<property name="displayName" column="DISPLAY_NAME" type="java.lang.String" />
	</class>	
</hibernate-mapping>